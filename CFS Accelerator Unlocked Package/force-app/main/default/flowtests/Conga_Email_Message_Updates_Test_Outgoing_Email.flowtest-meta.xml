<?xml version="1.0" encoding="UTF-8"?>
<FlowTest xmlns="http://soap.sforce.com/2006/04/metadata">
    <flowApiName>Conga_Email_Message_Updates</flowApiName>
    <label>Test Outgoing Email on Contract Agreement</label>
    <testPoints>
        <elementApiName>Start</elementApiName>
        <parameters>
            <leftValueReference>$Record</leftValueReference>
            <type>InputTriggeringRecordInitial</type>
            <value>
                <sobjectValue>{&quot;IsBounced&quot;:false,&quot;IsTracked&quot;:false,&quot;RelatedToId&quot;:&quot;a0QDR000005CTyI2AW&quot;,&quot;Status&quot;:&quot;0&quot;}</sobjectValue>
            </value>
        </parameters>
    </testPoints>
    <testPoints>
        <assertions>
            <conditions>
                <leftValueReference>fT_EmailOnContractAgreement</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <errorMessage>Email is not related to Contract Agreement</errorMessage>
        </assertions>
        <assertions>
            <conditions>
                <leftValueReference>Outgoing</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <errorMessage>Email is not set as Outgoing</errorMessage>
        </assertions>
        <elementApiName>Finish</elementApiName>
    </testPoints>
</FlowTest>
