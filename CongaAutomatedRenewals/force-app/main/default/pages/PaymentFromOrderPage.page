<apex:page standardController="Order_Payment__c" extensions="PaymentFromOrderController" recordSetVar="x">
	<apex:form >
		<apex:pageMessages ></apex:pageMessages>

		<apex:pageBlock >
			<apex:pageBlockButtons >
				<apex:commandButton value="Save" action="{!AutoRun}" />
				<apex:commandButton value="Cancel" action="{!Cancel}" />
			</apex:pageBlockButtons>
			<apex:pageBlockSection title="Payment Details" columns="1" collapsible="false">
				<apex:inputField value="{!BindPmt.pymt__Amount__c}" required="true" />
				<apex:inputField value="{!BindPmt.pymt__Date__c}" required="true"/>
				<apex:inputField value="{!BindPmt.pymt__Payment_Type__c}" required="true"/>
				<apex:inputField value="{!BindPmt.pymt__Card_Type__c}" />
				<apex:pageBlockSectionItem ></apex:pageBlockSectionItem>
				<apex:inputField value="{!BindOrdPmt.Comments__c}" />
			</apex:pageBlockSection>
		</apex:pageBlock>
	</apex:form>
</apex:page>