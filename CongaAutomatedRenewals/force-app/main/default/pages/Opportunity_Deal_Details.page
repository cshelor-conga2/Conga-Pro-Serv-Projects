<apex:page standardController="Opportunity" showHeader="false" docType="html-4.01-strict">



<div>
<apex:form id="refresh" >
<apex:messages />
    <apex:pageBlock id="viewBlock">
    <apex:pageBlockButtons >
    <apex:commandButton value="Save" action="{!quickSave}" rerender="refresh"/>
    <apex:commandButton onclick="location.reload()" value="Cancel" rerender="refresh"/>
    </apex:pageBlockButtons>
        <!--Opportunity Name Field-->
        <apex:pageBlockSection columns="1">
            <apex:pageblocksectionitem >
                <apex:OutputLabel value="{!$ObjectType.Opportunity.fields.Name.label}" for="checkbox" style="vertical-align:middle !important;font-weight:bold;font-size:12px;">       
                    <apex:inputField id="checkbox" value="{!Opportunity.Name}" style="width:95%" />
                </apex:OutputLabel>
            </apex:pageblocksectionitem>
         </apex:pageBlockSection>
         
        <!--Opportunity Description Field-->
        <apex:pageBlockSection columns="2">
            <apex:pageblocksectionitem >
                <apex:OutputLabel value="Deal Description" for="checkbox" style="vertical-align:middle !important;font-weight:bold;font-size:12px;">       
                </apex:OutputLabel>
            </apex:pageblocksectionitem>
         </apex:pageBlockSection>
        <apex:pageBlockSection columns="1">
            <apex:inputField value="{!Opportunity.Description}" label="" style="width:95%" />
        </apex:pageBlockSection>
        
        <!--Opportunity Next Step Field-->
        <apex:pageBlockSection columns="2">
            <apex:pageblocksectionitem >
                <apex:OutputLabel value="Next Step" for="checkbox" style="vertical-align:middle !important;font-weight:bold;font-size:12px;">       
                </apex:OutputLabel>
            </apex:pageblocksectionitem>
         </apex:pageBlockSection>
        <apex:pageBlockSection columns="1">
            <apex:inputField value="{!Opportunity.NextStep}" label="" style="width:95%" />
        </apex:pageBlockSection>
       
        <!--Deal Value Field-->
        <apex:pageBlockSection columns="2">
            <apex:pageblocksectionitem >
                <apex:OutputLabel value="{!$ObjectType.Opportunity.fields.Project_Priority__c.label}" for="checkbox" style="vertical-align:middle !important;font-weight:bold;font-size:12px;">
                    <apex:inputField id="checkbox" value="{!Opportunity.Project_Priority__c}" style="vertical-align:middle !important;" />
                </apex:OutputLabel>
            </apex:pageblocksectionitem>
        </apex:pageBlockSection>
        <apex:pageBlockSection columns="1">
            <apex:inputField value="{!Opportunity.project_priority_description__c}" label="" style="width:95%" />
        </apex:pageBlockSection>
        
        <!--Deal Decisions Maker's Field-->
        <apex:pageBlockSection columns="2">
            <apex:pageblocksectionitem >
                <apex:OutputLabel value="{!$ObjectType.Opportunity.fields.Decision_Process__c.label}" for="checkbox" style="vertical-align:middle !important;font-weight:bold;font-size:12px;">
                    <apex:inputField id="checkbox" value="{!Opportunity.Decision_Process__c}" style="vertical-align:middle !important;" />
                </apex:OutputLabel>
            </apex:pageblocksectionitem>
        </apex:pageBlockSection>
        <apex:pageBlockSection columns="1">
            <apex:inputField value="{!Opportunity.Sequence_of_Events__c}" label="" style="width:95%" />
        </apex:pageBlockSection>
        
        <!--Deal Issue Match Field-->
        <apex:pageBlockSection columns="2">
            <apex:pageblocksectionitem >
                <apex:OutputLabel value="{!$ObjectType.Opportunity.fields.implication_need__c.label}" for="checkbox" style="vertical-align:middle !important;font-weight:bold;font-size:12px;">
                    <apex:inputField id="checkbox" value="{!Opportunity.implication_need__c}" style="vertical-align:middle !important;" />
                </apex:OutputLabel>
            </apex:pageblocksectionitem>
        </apex:pageBlockSection>
        <apex:pageBlockSection columns="1">
            <apex:inputField value="{!Opportunity.Decision_Team_Description__c}" label="" style="width:95%" />
        </apex:pageBlockSection>
        
        <!--Deal Mutual Plan Field-->
        <apex:pageBlockSection columns="2">
            <apex:pageblocksectionitem >
                <apex:OutputLabel value="{!$ObjectType.Opportunity.fields.Critical_event_timeline__c.label}" for="checkbox" style="vertical-align:middle !important;font-weight:bold;font-size:12px;">
                    <apex:inputField id="checkbox" value="{!Opportunity.Critical_event_timeline__c}" style="vertical-align:middle !important;" />
                </apex:OutputLabel>
            </apex:pageblocksectionitem>
        </apex:pageBlockSection>
        <apex:pageBlockSection columns="1">
            <apex:inputField value="{!Opportunity.Critical_Event_Description__c}" label="" style="width:95%" />
        </apex:pageBlockSection>
    </apex:pageBlock>

