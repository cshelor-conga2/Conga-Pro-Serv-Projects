        <script type="text/javascript">
            $(document).ready(function() {
                $("#productsCombo").change(function() {
                    var productName = $(this).val();
                    var productLabel = $("#productsCombo option:selected").text();
                    $(this).children().each(function(key,option) {
                        if(option.value !== '') {
                            $("#" + option.value + "Buttons").hide();
                        }
                    });
                    if(productName !== '') {
                        $("#" + productName + "Buttons").show();
                        setCookie('congaliveagentprechatproduct',productLabel);
                    }
                })
            });
        
        function setCookie(cname, cvalue) {
            var d = new Date();
            d.setTime(d.getTime() + (5*60*1000)); // 5 minutes
            var expires = "expires="+ d.toUTCString();
            document.cookie = cname + "=" + cvalue + ";" + expires + ";domain=.force.com;path=/";
        }
